<%- include('./partials/header') %>
    <main>
      <section id="section-banner">
        <div class="banner-section"></div>
        <div class="card-banner">
          <h2 class="titulo-banner">Nuevos Ingresos</h2>
          <p class="texto-banner">
            Descubrí el próximo Funko Pop de tu colección
          </p>
          <a href="shop.html" class="boton-shop">SHOP</a>
        </div>
      </section>

      <section class="selection">
        <div class="card-section">
          <h2 class="titulo-section">STAR WARS &</h2>
          <h2 class="titulo-section">THE MANDALORIAN</h2>
          <p class="description-section">
            Disfruta de una saga que sigue <br />
            agregando personajes a su colección
          </p>
          <button type="button" class="boton-coleccion">VER COLECCIÓN</button>
        </div>
        <picture>
          <img
            class="funko-imagen"
            src="./multimedia/star-wars/baby-yoda-1.webp"
            alt="imagen baby yoda"
          />
        </picture>
      </section>

      <section class="selection">
        <picture>
          <img
            class="funko-imagen"
            src="./multimedia/pokemon/vulpix-1.webp"
            alt="imagen vulpix"
          />
        </picture>
        <div class="card-section">
          <h2 class="titulo-section">POKEMON INDIGO</h2>
          <p class="description-section">
            Atrapa todos los que puedas y disfruta <br />
            de una colección llena de amigos
          </p>
          <button type="button" class="boton-coleccion">VER COLECCIÓN</button>
        </div>
      </section>

      <section class="selection">
        <div class="card-section">
          <h2 class="titulo-section">HARRY POTTER</h2>
          <p class="description-section">
            Revive los recuerdos de una saga llena <br />
            de magia y encanto
          </p>
          <button type="button" class="boton-coleccion">VER COLECCIÓN</button>
        </div>
        <picture>
          <img
            class="funko-imagen"
            src="./multimedia/harry-potter/snape-patronus-1.webp"
            alt="imagen snape patronus"
          />
        </picture>
      </section>

      <section>
        <div class="div-container__funkoItem">
          <div class="glide">
            <div class="glide__track" data-glide-el="track">
              <ul class="glide__slides">
                <li class="glide__slide">
                  <div class="funkoItem">
                    <p class="p__nuevo">NUEVO</p>
                    <img src="multimedia/star-wars/trooper-1.webp" alt="" />
                    <h6 class="m-bottom-13">STAR WARS</h6>
                    <h5 class="m-bottom-13">STORMTROOPER LIGHTSABER</h5>
                    <p class="p__precio m-bottom-13">$ 1799,99.-</p>
                    <p class="p__cuotas m-bottom-13">
                      3 CUOTAS SIN INTERÉS
                    </p>
                  </div>
                </li>
                <li class="glide__slide">
                  <div class="funkoItem">
                    <p class="p__nuevo">NUEVO</p>
                    <img src="multimedia/pokemon/pidgeotto-1.webp" alt="" />
                    <h6 class="m-bottom-13">POKEMON</h6>
                    <h5 class="m-bottom-13">PIDGEOTTO</h5>
                    <p class="p__precio m-bottom-13">$ 1799,99.-</p>
                    <p class="p__cuotas m-bottom-13">3 CUOTAS SIN INTERÉS</p>
                  </div>
                </li>
                <li class="glide__slide">
                  <div class="funkoItem">
                    <p class="p__nuevo">NUEVO</p>
                    <img src="multimedia/harry-potter/luna-1.webp" alt="" />
                    <h6 class="m-bottom-13">HARRY POTTER</h6>
                    <h5 class="m-bottom-13">LUNA LOVEGOOD LION MASK</h5>
                    <p class="p__precio m-bottom-13">$ 1799,99.-</p>
                    <p class="p__cuotas m-bottom-13">3 CUOTAS SIN INTERÉS</p>
                  </div>
                </li>
              </ul>
            </div>
            <!-- SLIDE ARROWS -->
            <div class="glide__arrows" data-glide-el="controls">
              <button
                class="glide__arrow glide__arrow--left"
                data-glide-dir="<"
              >
                <img
                  class="slideArrows__icons"
                  src="multimedia/icons/mover-al-anterior.png"
                  alt=""
                />
              </button>
              <button
                class="glide__arrow glide__arrow--right"
                data-glide-dir=">"
              >
                <img
                  class="slideArrows__icons"
                  src="multimedia/icons/mover-al-siguiente.png"
                  alt=""
                />
              </button>
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- INICIO FOOTER -->
    <footer>
      <nav class="footer-navbar">
        <ul class="footer-navbar-nav">
          <li class="footer-nav-item">
            <a class="footer-nav-link" href="shop.html">SHOP</a>
          </li>
          <li class="footer-nav-item">
            <a class="footer-nav-link" href="login.html">INGRESAR</a>
          </li>
          <li class="footer-nav-item">
            <a class="footer-nav-link" href="contacto.html">CONTACTO</a>
          </li>
        </ul>
        <p class="texto-footer">All rights reserved 2023 - Funkoshop &copy;</p>
        <img class="logo-footer" src="multimedia/branding/isotype.svg" alt="logo-funko"/>
      </nav>
    </footer>
    <!-- FIN FOOTER -->

    <!-- GLIDE JS -->
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
    <script>
      new Glide(".glide", {
        type: "carousel",
        perView: 3,
        autoplay: 3000,
      }).mount();
    </script>
    <script src="script.js"></script>
  </body>
</html>
